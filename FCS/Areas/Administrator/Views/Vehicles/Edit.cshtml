@using Insya.Localization;
@model FCS.Models.Vehicle
<form asp-action="Edit">
    @await Html.PartialAsync("Controls/_Common")
    <div class="card">
        <div class="card-header bg-light header-elements-inline">
            <h5 class="card-title">
                @Html.Raw(Localization.Get(ViewData["action"].ToString())) | @Html.Raw(Localization.Get(ViewData["pageName"].ToString()))
            </h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CityId" class="form-label"></label>
                        <select asp-for="CityId" class="form-control select" asp-items="ViewBag.CityId"><option value="">---Select---</option></select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleTypeId" class="form-label"></label>
                        <select asp-for="VehicleTypeId" class="form-control select" asp-items="ViewBag.VehicleTypeId"><option value="">---Select---</option></select>
                        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreaId" class="form-label"></label>
                        <select asp-for="AreaId" class="form-control select" asp-items="ViewBag.AreaId"><option value="">---Select---</option></select>
                        <span asp-validation-for="AreaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodeId" class="form-label"></label>
                        <select asp-for="CodeId" class="form-control select" asp-items="ViewBag.CodeId"><option value="">---Select---</option></select>
                        <span asp-validation-for="CodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleStatusId" class="form-label"></label>
                        <select asp-for="VehicleStatusId" class="form-control select" asp-items="ViewBag.VehicleStatusId"><option value="">---Select---</option></select>
                        <span asp-validation-for="VehicleStatusId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlateNumber" class="form-label"></label>
                        <input asp-for="PlateNumber" class="form-control" autocomplete="off" />
                        <span asp-validation-for="PlateNumber" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("js/_select2");}
    @{await Html.RenderPartialAsync("js/_ValidationScriptsPartial");}
    <script type="text/javascript">
    </script>
}
