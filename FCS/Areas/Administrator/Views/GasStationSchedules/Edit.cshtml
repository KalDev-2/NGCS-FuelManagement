@using Insya.Localization;
@model FCS.Models.GasStationSchedule
<form asp-action="Edit">
    @await Html.PartialAsync("Controls/_Common")
    <div class="card">
        <div class="card-header bg-light header-elements-inline">
            <h5 class="card-title">
                @Html.Raw(Localization.Get(ViewData["action"].ToString())) | @Html.Raw(Localization.Get(ViewData["pageName"].ToString()))
            </h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="City" class="form-label"></label>
                        <select asp-for="CityId" class="form-control select" asp-items="ViewBag.CityId"><option value="">---Select---</option></select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GasStation" class="form-label"></label>
                        <select asp-for="GasStationId" class="form-control select" asp-items="ViewBag.GasStationId"><option value="">---Select---</option></select>
                        <span asp-validation-for="GasStationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleType" class="form-label"></label>
                        <select asp-for="VehicleTypeId" class="form-control select" asp-items="ViewBag.VehicleTypeId"><option value="">---Select---</option></select>
                        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FuelType" class="form-label"></label>
                        <select asp-for="FuelTypeId" class="form-control select" asp-items="ViewBag.FuelTypeId"><option value="">---Select---</option></select>
                        <span asp-validation-for="FuelTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlateNumberCategory" class="form-label"></label>
                        <select asp-for="PlateNumberCategoryId" class="form-control select" asp-items="ViewBag.PlateNumberCategoryId"><option value="">---Select---</option></select>
                        <span asp-validation-for="PlateNumberCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ScheduleDate" class="form-label"></label>
                        <input asp-for="ScheduleDate" class="form-control" autocomplete="off" />
                        <span asp-validation-for="ScheduleDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActionBy" class="form-label"></label>
                        <select asp-for="ActionBy" class="form-control select" asp-items="ViewBag.ActionBy"><option value="">---Select---</option></select>
                        <span asp-validation-for="ActionBy" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("js/_date");}
    @{await Html.RenderPartialAsync("js/_select2");}
    @{await Html.RenderPartialAsync("js/_ValidationScriptsPartial");}
    <script type="text/javascript">
        let calendar = $.calendars.instance('ethiopian', 'am');
        let gcalendar = $.calendars.instance('gregorian', 'en');
        $('#ScheduleDate').calendarsPicker({
            calendar: gcalendar
        });
    </script>
}
