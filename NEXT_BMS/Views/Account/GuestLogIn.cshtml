@model NEXT_BMS.ViewModels.LoginViewModel
@{
    Layout = "_Layout_Account";
}

<section class="min-vh-60 d-flex align-items-center justify-content-center bg-light">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white text-center py-4 border-0">
                <h3 class="fw-bold text-primary mb-1">Welcome Back</h3>
                <p class="text-muted small mb-0">Please enter your credentials to sign in</p>
            </div>
            <div class="card-body px-4 py-3">
                <form asp-action="LogIn" asp-controller="Account" novalidate>
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control rounded-3" placeholder="User Name" />
                        <label asp-for="UserName">Username</label>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Password" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" id="rememberMe" type="checkbox" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a class="small text-decoration-none" href="#">Forgot Password?</a>
                        <button type="submit" class="btn btn-primary px-4 rounded-pill shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-white border-0 text-center py-">
                <small class="text-muted">Don't have an account?</small>
                <a asp-action="CreateAccount" asp-controller="Account" class="text-primary fw-semibold ms-1 text-decoration-none">
                    Sign up here
                </a>
            </div>
        </div>
    </div>
</section>
